@model IEnumerable<MovieApp.Models.DTO.Movie>

@{
    ViewData["Title"] = "";
}

<h1>Movie List</h1>
<br />

<p>
    <a asp-action="Create" class="btn btn-info">Add Movie</a>
</p>
<table class="table thead-light table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger">Delete</a>|
                    <a asp-action="Create" asp-controller="Votes" asp-route-movieId="@item.MovieId" class="btn btn-success">Vote</a>



                </td>
            </tr>
        }
    </tbody>
</table>