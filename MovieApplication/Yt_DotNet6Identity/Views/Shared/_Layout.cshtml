@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css">
    <!-- Add your custom styles here -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha2/dist/css/bootstrap.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Add your additional CSS links here -->

    <style>
        /* Add your custom styles for improved layout */
        <!-- Add your custom styles here -->
        <style >
        /* Add your custom styles for improved layout */
        body {
            padding-top: 74px; /* Adjust based on your navbar height */
        }

        /* Additional styles for improved layout */
        .content-wrapper {
            min-height: calc(100vh - 56px);
        }

        .main-footer {
            margin-left: 0;
        }

        .brand-link {
            display: flex;
            align-items: center;
            padding: 8px 15px;
            text-decoration: none; /* Remove underlines */
        }

        .brand-icon {
            margin-right: 10px;
            font-size: 24px;
            color: red; /* Set color to red */
        }

        .brand-text {
            font-size: 1.5rem;
            font-weight: bold;
            text-transform: uppercase; /* Capitalize */
        }
    </style>

    </style>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/UserAuthentication/Logout">
                        <i class="fas fa-sign-out-alt"></i> Logout(@username)
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <i class="fas fa-film brand-icon"></i>
                <span class="brand-text font-weight-light">Movie Project</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Brand Header -->
                <!-- Sidebar items go here -->
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                    data-accordion="false">
                    <li class="nav-item">
                        <a href="/Dashboard/Display" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    @if(User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a href="/Admin/Display" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Admin Page</p>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a href="/Movies/Index" class="nav-link">
                            <i class="nav-icon fas fa-film"></i>
                            <p>Movies</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Votes/Index" class="nav-link">
                            <i class="nav-icon fas fa-star"></i>
                            <p>Ratings</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserAuthentication/Logout" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p>Logout()</p>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Content Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <h1 class="m-0">Dashboard</h1>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                @RenderBody() <!-- Add this line to render the body content -->
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
               
            </div>
            <strong>Movie App &copy; 2024</strong>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE JS -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
