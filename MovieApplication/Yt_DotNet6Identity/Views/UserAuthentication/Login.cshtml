@model MovieApp.Models.DTO.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #f4f4f4;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            max-width: 400px;
            margin: auto;
            margin-top: 100px;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-icon {
            display: block;
            font-size: 48px;
            color: #0d6efd; /* Custom primary color */
            text-align: center;
            margin-bottom: 20px;
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #0d6efd; /* Custom primary color */
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
                color: #0d6efd; /* Custom primary color */
            }

        .form-control {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border-radius: 3px;
            border: 1px solid #ccc;
        }

        .btn-primary {
            background-color: #0d6efd; /* Custom primary color */
            border-color: #0d6efd; /* Custom primary color */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Slightly darker shade for hover */
                border-color: #0056b3; /* Slightly darker shade for hover */
            }

        .msg {
            padding: 0px;
            color: red;
        }
    </style>
</head>

<body>

    <div class="container">

        <div class="login-container">

            <span class="bi bi-person-fill user-icon"></span>
            <h2 style="color:black;">Login</h2>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <input type="text" class="form-control" id="UserName" asp-for="UserName" placeholder="Enter Username">
                    <div class="msg">
                        <span asp-validation-for="UserName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Enter your password">
                    <div class="msg">
                        <span asp-validation-for="Password"></span>
                    </div>
                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">
                            @TempData["msg"]
                        </div>
                    }
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-control">Submit</button>
                </div>
                <div class="form-group">
                    <a class="btn btn-info form-control" href="/UserAuthentication/Registration">Not a user! Click here to sign up</a>
                </div>
                <!-- Validation summary section -->
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
